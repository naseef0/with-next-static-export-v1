{
    "redirects": [
      {
        "source": "/",
        "destination": "/ae-en", // Default locale
        "permanent": false
      },
      {
        "source": "/:path((?!ae-en|ae-ar|sa-en|sa-ar).*)", 
        "destination": "/ae-en/:path*", // Fallback locale
        "permanent": false
      },
      {
        "source": "/:locale(ae-en|ae-ar|sa-en|sa-ar)/:path*",
        "destination": "/:locale/:path*",
        "permanent": false
      }
    ]
  }